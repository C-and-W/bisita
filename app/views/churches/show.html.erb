<div class="d-title col-md-11"><%= @church.name.upcase %>,<br>
<%= @church.location.upcase %></div>
<br>
</div>

<div class="d-title-div1 row">

<div class="d-subtitle"><%= @church.latitude %> &deg;N <%= @church.longitude %> &deg;E</div>
</div>
<%panocount=0%>
<% @church.panos.each do |t| %>
